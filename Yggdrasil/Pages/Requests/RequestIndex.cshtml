@page
@model Yggdrasil.Pages.Requests.RequestIndexModel

@{
    ViewData["Title"] = "Bestillinger";
}

<h3>Bestillinger</h3>

<div>
    <form method="get">
        <p>
            Search:
            <input type="text" asp-for="Criteria" />
            <input type="submit" value="Filtrer" class="btn button btn-dark" />
        </p>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Addresse</th>
            <th>Postnummer</th>
            <th>Fra</th>
            <th>Til</th>
            <th>Total Pris</th>
            <th>Kommentar</th>
            <th>Bruger</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            if (item.CourierID < 1)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AltAddress </td>
                    <td>@item.CustomerID</td>
                    <td>@item.DateTimeWish </td>
                    <td>@item.Comment </td>
                    <td><a asp-page="/Orders/OrderDetails" asp-route-id="@item.Id">Detaljer</a></td>
                    <td><form method="post"><input type="submit" asp-page-handler="Accept" asp-route-id="@item.Id" value="Acceptér bestilling" class="btn btn-primary" /></form></td>
                </tr>
            }
        }
    </tbody>
</table>