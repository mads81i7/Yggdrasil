@page
@using Yggdrasil.Models
@model Yggdrasil.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Brugere";
}

<button class="accordion">Brugere</button>
<div class="panel">
    @foreach (var item in Model.Users)
    {
        if (item.UserType == UserTypes.Admin && item.EmailAddress != null)
        {
            Model.AmountOfAdmins++;
        }
        else if (item.UserType == UserTypes.Courier)
        {
            Model.AmountOfCouriers++;
        }
        else if (item.UserType == UserTypes.Customer)
        {
            Model.AmountOfCustomers++;
        }
    }
    <h6><br/> Antal af forskellelige brugere</h6>
    <p>Admin : @Model.AmountOfAdmins || Bud : @Model.AmountOfCouriers || Kunde : @Model.AmountOfCustomers</p>
    <table class="table table-striped" style="white-space: nowrap">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].UserType)
            </th>
            <th>
                Navn
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Password)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Users)
        {
            @if (item.EmailAddress != null)
            {
                <tr>
                    <td>
                        @{
                            if (item.UserType == UserTypes.Admin)
                            {
                                <p>Admin</p>
                            }
                            else if (item.UserType == UserTypes.Courier)
                            {
                                <p>Bud</p>
                            }
                            else if (item.UserType == UserTypes.Customer)
                            {
                                <p>Kunde</p>
                            }
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.ID">Detaljer</a> |
                        <a asp-page="./Edit" asp-route-id="@item.ID">Redigér</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Slet</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

<button class="accordion">Vare statistik</button>
<div class="panel">
    @foreach (Order o in Model.Orders)
    {
        foreach (Ware w in o.OrderedWares)
        {
            Model.Wares[w.Id].AmountSold++;
        }
    }

    <h4>Antal solgt</h4>
    @foreach (Ware w in Model.Wares)
    {
        <p>@w.Name : @w.AmountSold</p>
    }
</div>

<script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        });
    }
</script>