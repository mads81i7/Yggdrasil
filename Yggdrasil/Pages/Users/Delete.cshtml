@page
@model Yggdrasil.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Slet bruger";
}

<h1>Slet bruger</h1>

<p class="text-danger">@Model.AccessDenied</p>
<div>
    <h4>Er du sikker på, at du vil slette denne bruger?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Password)
        </dd>
        <dt class="col-sm-2">
            Adresse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.AddressLine1)
            @Html.DisplayFor(model => model.User.AddressLine2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PhoneNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PhoneNo)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.ID"/>
        <div class="form-group">
            <label asp-for="User.PasswordCheck" class="control-label">Skriv dit kodeord som sikkerhedscheck</label>
            <input asp-for="User.PasswordCheck" class="form-control" />
            <span asp-validation-for="User.PasswordCheck" class="text-danger"></span>
        </div>
        <input type="submit" value="Slet" class="btn btn-danger"/> |
        <a asp-page="./Index">Tilbage til oversigten</a>
    </form>
</div>
