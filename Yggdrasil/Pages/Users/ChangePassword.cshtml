@page
@model Yggdrasil.Pages.Users.ChangePasswordModel

@{
    ViewData["Title"] = "Skift kodeord";
}

<h1>Bruger</h1>

<h4>Skift kodeord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <div class="form-group">
                <label asp-for="User.PasswordCheck" class="control-label">Skriv dit kodeord som sikkerhedscheck</label>
                <input asp-for="User.PasswordCheck" class="form-control" />
                <span asp-validation-for="User.PasswordCheck" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password2" class="control-label"></label>
                <input asp-for="User.Password2" class="form-control" />
                <span asp-validation-for="User.Password2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gem ændringer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Tilbage til oversigt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
