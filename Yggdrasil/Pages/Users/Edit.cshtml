@page
@model Yggdrasil.Pages.Users.EditModel

@{
    ViewData["Title"] = "Redigér bruger";
}

<h1>Redigér bruger</h1>

<hr />
<p class="text-danger">@Model.AccessDenied</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <div class="form-group">
                <label asp-for="User.FullName" class="control-label"></label>
                <input asp-for="User.FullName" class="form-control" />
                <span asp-validation-for="User.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.EmailAddress" class="control-label"></label>
                <input asp-for="User.EmailAddress" class="form-control" />
                <span asp-validation-for="User.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.BirthDate" class="control-label"></label>
                <input asp-for="User.BirthDate" class="form-control" />
                <span asp-validation-for="User.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AddressLine1" class="control-label"></label>
                <input asp-for="User.AddressLine1" class="form-control" />
                <span asp-validation-for="User.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AddressLine2" class="control-label"></label>
                <input asp-for="User.AddressLine2" class="form-control" />
                <span asp-validation-for="User.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PostalCode" class="control-label"></label>
                <input asp-for="User.PostalCode" class="form-control" />
                <span asp-validation-for="User.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.City" class="control-label"></label>
                <input asp-for="User.City" class="form-control" />
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PhoneNo" class="control-label"></label>
                <input asp-for="User.PhoneNo" class="form-control" />
                <span asp-validation-for="User.PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PasswordCheck" class="control-label">Skriv dit kodeord som sikkerhedscheck</label>
                <input asp-for="User.PasswordCheck" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Gem ændringer" class="btn button btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Tilbage til oversigt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
