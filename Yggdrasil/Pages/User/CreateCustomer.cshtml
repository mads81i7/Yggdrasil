@page
@model Yggdrasil.Pages.User.CreateCustomerModel
@{
}

<h5>Antallet af kunder er @Model.Customers.Count</h5>

<h6>Tilføj en ny kunde</h6>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label class="col-sm-2 control-label">Fornavn</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Customer.FirstName" type="text" class="form-control">
            <span asp-validation-for="@Model.Customer.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label class="col-sm-2 control-label">Efternavn</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Customer.LastName" type="text" class="form-control">
            <span asp-validation-for="@Model.Customer.LastName" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label class="col-sm-2 control-label">Adresse</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Customer.AddressLine1" type="text" class="form-control">
            <span asp-validation-for="@Model.Customer.AddressLine1" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label class="col-sm-2 control-label">Postnummer</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Customer.PostalCode" type="number" class="form-control">
            <span asp-validation-for="@Model.Customer.PostalCode" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label class="col-sm-2 control-label">By</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Customer.City" type="text" class="form-control">
            <span asp-validation-for="@Model.Customer.City" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label class="col-sm-2 control-label">Telefonnummer</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Customer.PhoneNo" type="text" class="form-control">
            <span asp-validation-for="@Model.Customer.PhoneNo" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Customer.EMail" type="email" class="form-control">
            <span asp-validation-for="@Model.Customer.EMail" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">
                Tilføj kunde
            </button>
        </div>
    </div>
</form>