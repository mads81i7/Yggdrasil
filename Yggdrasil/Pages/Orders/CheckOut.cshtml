<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="@Model.Order.AltAddress" class="control-label"></label>
        <div>
            <input asp-for="@Model.Order.AltAddress" type="text" class="form-control">
            <span asp-validation-for="@Model.Order.AltAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Order.Comment" class="control-label"></label>
        <div>
            <textarea asp-for="@Model.Order.Comment" rows="5" cols="50"></textarea>
            <span asp-validation-for="@Model.Order.Comment" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Leverings tidsrum</label>
        <div>
            <p>
                <input asp-for="@Model.Order.DateTimeWish" />
                <span asp-validation-for="@Model.Order.DateTimeWish" class="text-danger"></span>
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn button btn-dark border-light" asp-page-handler="Checkout">
                Bestil
            </button>
        </div>
    </div>
</form>
