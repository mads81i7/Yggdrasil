@page
@model Yggdrasil.Pages.Orders.shoppingCartModel
@{
}
<h1>Indkøbs Kurv</h1>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Navn</th>
        <th>Beskrivelse</th>
        <th>Pris</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Wares)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.name</td>
            <td>@item.description</td>
            <td>@item.price</td>
            <td>
                <form method="post">
                    <button asp-page-handler="Remove" asp-route-Id="@item.id" class="btn btn-danger btn-group-lg pull-right">
                        Fjern fra kurv
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<h2>Total : @Model.itemsInCart.CalculateTotalPrice() kr.</h2>
<a asp-page="/Orders/AllWares" class="btn btn-success btn-group-lg pull-right">Continue Shopping</a>
<a asp-page="/Orders/CheckOut" class="btn btn-success btn-group-lg pull-right">Check Out</a>